<h1 class="head1">Listing contracts</h1>
<%= form_tag contracts_path, :method => 'get' do %>
  <p class="search_box">
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %> you can search in reason field
  </p>
<% end %>
<table>
  <tr>
    <th>State</th>
    <th>Price</th>
    <th>Start at</th>
    <th>End at</th>
    <th>Policy</th>
    <th>Reason</th>
    <th>Customer</th>
    <th></th>
    <th></th>
    <th></th>

  </tr>

<% @contracts.each do |contract| %>
  <tr>
    <td><%= contract.state %></td>
    <td><%= contract.price %></td>
    <td><%= contract.start_at %></td>
    <td><%= contract.end_at %></td>
    <td><%= contract.policy %></td>
    <td><%= contract.reason %></td>
    <td><%= contract.customer.id %></td>
    <td><%= link_to 'Show', contract %></td>
    <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
    <td><%= link_to 'Destroy', contract, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Contract', new_contract_path %>
